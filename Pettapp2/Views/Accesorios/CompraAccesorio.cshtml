@model IEnumerable<Pettapp2.Models.Accesorio>

@{
    ViewData["Title"] = "Accesorios";
}

<h1 class="text-center" style="color: #2C3E50; margin-bottom: 20px;">Accesorios Disponibles</h1> <!-- Título centrado en gris oscuro -->

<div class="row justify-content-center">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-lg border-0" style="transition: transform 0.3s, box-shadow 0.3s;">
                <div class="card-body d-flex flex-column" style="background: linear-gradient(to right, #f8f9fa, #e9ecef); border-radius: 8px;">
                    <h5 class="card-title" style="color: #34495E; font-weight: bold;">@item.Nombre</h5> <!-- Nombre en gris oscuro con negrita -->
                    <p class="card-text" style="color: #2E86C1;">@item.Descripcion</p> <!-- Descripción en azul oscuro -->
                    <p class="card-text" style="color: #F39C12;"><strong>Precio:</strong> $@item.Precio</p> <!-- Precio en dorado -->
                    <p class="card-text" style="color: #E74C3C;"><strong>Stock:</strong> @item.Stock unidades</p> <!-- Stock en rojo -->

                    <div class="mt-auto">
                        <!-- Botón Comprar con efecto hover -->
                        <form asp-action="AgregarAlCarrito" method="post">
                            <input type="hidden" name="AccesorioId" value="@item.AccesorioId" />
                            <button type="submit" class="btn btn-primary w-100" style="background-color: #8E44AD; border-color: #8E44AD; transition: background-color 0.3s;">
                                Comprar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Usuario">Vista Usuario</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="VistaAdmin">Vista Admin</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="CarritoAccesorios" asp-action="Index">
                                <img width="30px" src="https://cdn-icons-png.flaticon.com/512/3144/3144456.png">
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>




        </div>
    }
</div>

<style>
    /* Efecto hover para las tarjetas */
    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
    }

    /* Efecto hover para el botón de comprar */
    .btn-primary:hover {
        background-color: #732d91;
        border-color: #732d91;
    }
</style>
